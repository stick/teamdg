%table.table
  %thead
    %tr
      %th
      - @event.groups.each do |group|
        %th{ colspan: 2 } #{group.name.capitalize}
  %tbody
    - @schedule.gamedays.each_with_index do |match, matchnum|
      %tr
        %th Match #{matchnum + 1}
        - match.games.each do |g|
          %td #{g.team_a.to_s} <strong><small>vs</small></strong> #{g.team_b.to_s}




